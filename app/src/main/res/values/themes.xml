<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Detox" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dominant_color</item>
        <item name="colorPrimaryVariant">@color/dominant_color</item>
        <item name="colorOnPrimary">@color/dominant_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_complimentary_color</item>
        <item name="colorSecondaryVariant">@color/dark_complimentary_color</item>
        <item name="colorOnSecondary">@color/dark_complimentary_color</item>
        <!-- Status/navigation bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Splash screen icon.. -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Splash screen background color. -->
        <item name="android:windowSplashScreenBackground">@color/dominant_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>