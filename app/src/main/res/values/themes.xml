<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Detox" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dominant_color</item>
        <item name="colorPrimaryVariant">@color/light_complimentary_color</item>
        <item name="colorOnPrimary">@color/light_complimentary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dominant_color</item>
        <item name="colorSecondaryVariant">@color/light_complimentary_color</item>
        <item name="colorOnSecondary">@color/light_complimentary_color</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>


        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered</item>


        <!-- Status/navigation bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Splash screen icon.. -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Splash screen background color. -->
        <item name="android:windowSplashScreenBackground">@color/dominant_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Bottom Navigation Bar Widget-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <!--Bottom Navigation Bar Theme-->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/dark_complimentary_color</item>
        <item name="colorOnSurfaceVariant">@color/dark_complimentary_color</item>
    </style>
</resources>